                                    <div class="btnlogin">
                                        <button type="button" class="btn btn-outline-success btnicon" id="logincharge" data-bs-toggle="modal" data-bs-target="#login">
                                        <i class="fa-solid fa-user"></i>
                                        <p class="resp_text" id="btnlogintext">Login <br> Inscription</p>
                                        </button>
                                    </div>
                                    {% endif %}
                                    {# Profils #}
                                    {% if app.user %}
                                    <div class="row">
                                        <a class="col" href=" {{ path("app_profile") }}">
                                                <button type="button" class="btn btn-outline-success btnprofil">
                                                    <i class="fa-solid fa-user"></i>
                                                    {% if app.user.userCompanySiret == null %}
                                                        <p class="btnlogintext">{{ app.user.UserName }}</p>
                                                    {% endif %}
                                                    {% if app.user.userCompanySiret != null %}
                                                        <p class="btnlogintext">{{ app.user.userCompanyName }}</p>
                                                    {% endif %}
                                                </button>
                                        </a>
                                        <a class="col text-end" href="{{ path('app_logout') }}" class="profildeco btn btn-outline-danger"><i class="fa-solid fa-arrow-right-from-bracket" style="color: #ff0000;"></i></a>
                                        </div>
                                    </div>
                                    {% endif %}
                            </div>
                            </article>
                    </section>
                </ul>
            </div>
        </div>
    </nav>
</div>


