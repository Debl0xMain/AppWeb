                        <article class="row">
                    {% if app.user == null %}
                            <div class="navbar_case">
                                <button type="button" class="btn btn btn-outline-success" id="shopbtn" data-bs-toggle="modal" data-bs-target="#basket-shopping">
                                    <i class="fa-sharp fa-solid fa-basket-shopping"></i>
                                    <p class="resp_text" id="btnlogintext">Panier</p>
                                </button>
                            </div>
                    {% endif %}
                    {% if app.user %}
                        {% if app.user.roles[0]  == 'ROLE_USER' or app.user.roles[0]  == 'ROLE_PRO' %}
                            <div class="navbar_case">
                                <button type="button" class="btn btn btn-outline-success" id="shopbtn" data-bs-toggle="modal" data-bs-target="#basket-shopping">
