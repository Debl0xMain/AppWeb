                                <a class="btn btn btn-outline-success" href={{  path("app_config") }}>
                                     <i class="fa-solid fa-gear"></i>
                                    <p class="resp_text" id="btnlogintext">Config</p>
                                </a>
                            </div>
                        {% endif %}
                    {% endif %}

                            <div class="navbar_case">
                                    {# login/inscription #}
