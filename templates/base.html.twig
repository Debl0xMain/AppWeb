<!DOCTYPE html>
<html>
    <head>
    {# Meta #}
        <meta charset="UTF-8">
        <meta name="title" content="Green Village" />
	    <meta name="description" content= "Magasin de musique !" />
    	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="theme-color" content="#3c790a" media="(prefers-color-scheme: dark)">
        <meta name="color-scheme" content="dark light">
        <title>{% block title %}Green Village{% endblock %}</title>
    {# links #}
        <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
        <link rel="stylesheet" href={{asset('assets/css/navbar.css')}}>
        <link rel="icon" type="image/png" href={{asset('assets/logo/logogv.png')}} />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
    {# navbar #}
    
        {{ render(controller(
            'App\\Controller\\FragementController::navbar'
        )) }}
        {# panier #}
        {% if app.user %}
            {% if app.user.roles[0]  == 'ROLE_USER' or app.user.roles[0]  == 'ROLE_PRO' %}
                {{ render(controller(
                'App\\Controller\\FragementController::panier'
                )) }}
            {% endif %}
        {% endif %}
        
    {# BodyBlock #}
    <main>
        {% block body %}
        {% endblock %}
    </main>
    {# footer  #}
        <article class="mb-1 navbar_bg row mx-auto w-75 text h-1 center row fixed-bottom rounded py-2 footer_responsive">
            <button class="btn col btn_footer">
                <a href="facebook.com" target="_blank">
                    <i class="fa-brands fa-facebook icon_footer"></i>
                </a>
            </button>
            <button class="btn col btn_footer">
                <a href="instagram.com" target="_blank">
                    <i class="fa-brands fa-instagram icon_footer"></i>
                </a>
            </button>
            <button type="button" class="btn col btn_footer " data-bs-toggle="modal" data-bs-target="#mlegal">
                <i class="fa-solid fa-scale-unbalanced icon_footer"></i>
            </button>
            <button class="btn btn_footer col">
                <a href="phone:06xxxxxx41">
                    <i class="fa-solid fa-phone icon_footer"></i>
                </a>
            </button>
            <button class="btn col btn_footer">
                <a href="mailto:adressmail@contact.fr">
                    <i class="fa-solid fa-envelope icon_footer"></i>
                </a>
            </button>
        </article>
    {# Link Script #}
            {{ render(controller(
        'App\\Controller\\FragementController::modal'
        )) }}
        {% if app.user == null %}
        <script src={{asset('assets/js/switchmodal.js')}}></script>
        {% endif %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/3fd2d451cc.js" crossorigin="anonymous"></script>
    </body>
</html>

